<?xml version="1.0" encoding="utf-8"?>
     <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".a9">


    <TextView
        android:id="@+id/Random"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:padding="10sp"
        android:text="Sadhana Bhakti"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Random"
        android:layout_marginTop="20sp"
        android:background="#30300303"
        android:padding="30sp"
        android:text="Total rounds you did before going out or work in the morning?"
        android:textColor="@color/black"
        android:textColorHint="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Username"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="34sp"
        android:layout_marginTop="82sp"
        android:layout_marginEnd="80sp"
        android:backgroundTint="#808080"
        android:inputType="text"
        android:text="next"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Username"
        android:layout_marginTop="82sp"
        android:layout_marginEnd="8sp"
        android:layout_toStartOf="@+id/Login"
        android:backgroundTint="#808080"
        android:hint="Type here"
        android:textAlignment="textEnd"
        android:textColorHint="@color/black"
        android:textSize="14dp" />

</RelativeLayout>