<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    tools:context=".a18">


    <TextView
        android:id="@+id/Random"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:padding="10dp"
        android:text="Sadhana Bhakti"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Username"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/Random"


        android:layout_marginTop="20dp"
        android:background="#30300303"
        android:padding="30dp"
        android:text="Did you meditate on shloka, bhajan or what you heard in class today?"
        android:textColor="@color/black"
        android:textColorHint="#FFFFFF"
        android:textSize="24sp"

        android:textStyle="italic" />

    <EditText
        android:id="@+id/min"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="309dp"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/Login"

        android:backgroundTint="#808080"
        android:hint="Enter min."
        android:inputType="number"
        android:textColorHint="@color/black"
        android:textSize="14dp" />

    <Button
        android:id="@+id/Login"
        android:layout_width="88dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="310dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#808080"
        android:inputType="text"
        android:text="next"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/hour"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="310dp"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/min"
        android:backgroundTint="#808080"
        android:hint="Enter hour"
        android:inputType="number"
        android:textColorHint="@color/black"
        android:textSize="14dp" />

    <Button
        android:id="@+id/No"
        android:layout_width="88dp"
        android:layout_height="42dp"
        android:layout_below="@+id/Login"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="13dp"
        android:backgroundTint="#808080"
        android:inputType="text"
        android:text="no"
        android:textSize="20dp" />

</RelativeLayout>